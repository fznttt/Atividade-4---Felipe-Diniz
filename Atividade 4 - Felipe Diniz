1)
#include <stdio.h>

int main() {
int numero;

    printf("Digite um número: ");
    scanf("%d", &numero);

    for (int i = 0; i <= numero; i++) {
        printf("%d\n", i);
    }
    return 0;

}

2)
#include <stdio.h>

int main() {
int valor;
int saida = -1; // Defina o valor de saída, por exemplo, -1

    do {
        printf("Digite um valor (ou %d para sair): ", saida);
        scanf("%d", &valor);

    } while (valor != saida);

    printf("Saindo do programa.\n");

    return 0;

}

3)
#include <stdio.h>

int main() {
int soma = 0;
int numero;

    while (soma <= 1000) {

        printf("Digite um número: ");
        scanf("%d", &numero);
        soma += numero;
    }
    printf("A soma total é: %d\n", soma);

    return 0;

}

4)
#include <stdio.h>

int main() {
int subtracao = 0;
int numero;

    while (subtracao >= -1000) {

        printf("Digite um número para subtrair: ");
        scanf("%d", &numero);
        subtracao -= numero;
    }
    printf("A subtração total é: %d\n", subtracao);

    return 0;

}
